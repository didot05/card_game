<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SoftwareEngineering.MenuController">
   <children>
      <VBox prefHeight="200.0" prefWidth="600.0">
         <children>
            <HBox fx:id="options" prefHeight="100.0" prefWidth="598.0">
               <children>
                  <Label prefHeight="21.0" text="Number of Players: " />
                  <ChoiceBox fx:id="numOfPlayers" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Number of Game Agents : " />
                  <ChoiceBox fx:id="numOfAI" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox fx:id="options1" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="21.0" text="Path of Board Data: " />
                  <TextField fx:id="boardDataPath" />
               </children>
            </HBox>
            <HBox fx:id="options11" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="21.0" text="Path of Card Data: " />
                  <TextField fx:id="cardDataPath" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="Game Mode:" />
                  <ChoiceBox fx:id="gameMode" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="Length of Game for Abridged Mode: " />
                  <TextField fx:id="minutesField" />
                  <Label text="minutes" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="1.0" layoutY="229.0" prefHeight="150.0" prefWidth="594.0" spacing="20.0">
         <children>
            <Label fx:id="errorLabel" />
            <Button fx:id="createGameButton" mnemonicParsing="false" onAction="#createGame" text="Create Game" />
         </children>
      </VBox>
   </children>
</AnchorPane>
